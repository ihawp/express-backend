extends layout

block content
    header(class='flex flex-col items-center text-center mx-3')
        img(src='/images/w.webp' class='rounded mb-1 hero-image-hover' width='250' height='250')
        h1(class='font-size-4 mb-half') Warren Chemerika
        h2(class='bg-6 p-half br-4 font-size-2') Web Developer @ Servoweb
        p(class='max-w-400') Certified by Saskatchewan Polytechnic

    section(class='flex flex-col gap-1')
        h2 Recent Work
        each item in content
            div(class='bg-5 p-1 br-4 pointer flex flex-wrap justify-between items-center' id=`project-${item.id}`)
                div
                    h3(class='mr-1')= item.title
                div
                    ul(class='flex gap-1 flex-grow-1')
                        li
                            a(href=`${item.url}` class='hover-underline rounded bg-6')
                        li
                            a(href=`${item.github}` class='hover-underline rounded bg-6')
                div(class='display pb-1')
                    each text in JSON.parse(item.description)
                        p(class=`mt-1`)= text
                    div
                        each logo in JSON.parse(item.languages)
                            img(src=`${logo}`)
    script(src='javascripts/pug-projects.js')

    section
        h2 Where did I study?