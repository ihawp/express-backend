extends layout

block content
    header(class='mb-2')
        nav(aria-label='Main Site Navigation')
            ul(class='flex gap-half list-none p-0')
                li
                    a(href='javascript:history.back()' class='c-4') Go Back
    header(class='mb-1 bg-5 p-1 br-8 gap-1 flex flex-col')
        h1= postTitle
        div(class='flex flex-wrap justify-between gap-1')
            div
                -
                    let l = new Date(timestamp)
                p= `${author} | ${l.getDay()} / ${l.getMonth() + 1} / ${l.getFullYear()}`
            div
                a(href=`${github}` class='mr-half') Github
                a(href=`${url}`) URL
    section
        div(class='flex flex-col gap-1 p-1')
            each item in content
                p= item