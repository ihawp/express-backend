extends layout

block content
    header(class='mb-2')
        nav(aria-label='Main Site Navigation')
            ul(class='flex gap-half list-none p-0')
                li
                    a(href='/blog' class='c-4') Go Back
    header(class='bg-5 p-1 br-8 gap-1 flex flex-col')
        h1= postTitle
        div(class='flex flex-wrap justify-between gap-1 c-4')
            div
                -
                    let l = new Date(timestamp)
                p= `${author} | ${l.getDate()} / ${l.getMonth() + 1} / ${l.getFullYear()}`
            div
                a(href=`${github}` class='mr-half c-4') Github
                a(href=`${url}` class='c-4') URL
    section
        div(class='flex flex-col gap-1 p-1 c-6')
            each item in content
                | !{item}