extends layout

block content
    header(class='text-center')
        h1(class='bg-5 br-4 px-1 mb-1') Blog
    section(class='flex flex-col gap-1')
        h2(class='b-only-bottom-1 bc-5 bs-solid pb-1 mb-half') Recent Posts:
        ul(class='flex flex-col gap-1 disc pl-1-5')
            each item in content
                li
                    a(href=`/blog/${item.id}`)= item.title